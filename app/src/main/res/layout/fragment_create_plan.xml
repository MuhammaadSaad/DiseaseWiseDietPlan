<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saad_pcp.diseasewisedietplan.CreatePlanFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Selected Disease:"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:paddingBottom="10dp"
    />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disease:"
            android:id="@+id/SelDisease"
            style="@style/ButtonColor"

            android:paddingBottom="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Plan Name"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Plan Name"
            android:id="@+id/PlanName"
            android:singleLine="true"
            android:inputType="text"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Calories:"
            android:paddingBottom="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TxtCalory"
            android:paddingBottom="10dp"
            android:text=""
            android:inputType="number"

            android:textStyle="normal"
             />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Days:"
            android:paddingBottom="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TxtDays"
            android:text=""
            android:paddingBottom="10dp"
            android:inputType="number"

            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:paddingBottom="10dp"
            android:id="@+id/NextDisease"
            style="@style/ButtonColor"
            />



        <!-- TODO: Update blank fragment layout -->


    </LinearLayout>


</FrameLayout>
